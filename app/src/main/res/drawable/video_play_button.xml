<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/blackTextColor"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="ring"
            android:thickness="2dp"
            android:visible="true">
            <solid android:color="@color/blackTextColor"></solid>
        </shape>
    </item>

    <item>
        <shape
            android:shape="line"
            android:thickness="2dp">
            <solid android:color="@color/primaryTextColor"></solid>
        </shape>
    </item>

</ripple>