<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0C000000"
    tools:context=".CAllEntriesActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cEntriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cVideoRecordButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="cRecordVideoClick"
        android:src="@drawable/record_video"
        android:tint="#FFFFFF"
        app:fabCustomSize="50dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cAudioRecordButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="cRecordAudioClick"
        android:src="@drawable/record_audio"
        android:tint="#FFFFFF"
        app:fabCustomSize="50dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cPlusButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:onClick="cPlusClick"
        android:src="@drawable/plus_thin" />


</RelativeLayout>