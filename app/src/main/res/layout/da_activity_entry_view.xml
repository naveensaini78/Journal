<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naveensaini.dwintest.DAEntryViewActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorPrimaryDark" />


            <LinearLayout
                android:id="@+id/dDateInfoLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dDateOneText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="08"
                        android:textColor="@color/blackTextColor"
                        android:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/dDateTwoText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Aug, 2019"
                        android:textColor="@color/blackTextColor"
                        android:autoSizeTextType="uniform" />

                </LinearLayout>


                <TextView
                    android:id="@+id/dDayText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="Wednesday"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/textSizeThree"
                    android:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/dTimeText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="3:27 PM"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/textSizeTwo"
                    android:autoSizeTextType="uniform" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dVideosRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="0dp" />


            <VideoView
                android:id="@+id/dMainVideoView"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dAudiosRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="0dp" />


            <EditText
                android:id="@+id/dHeadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="start"
                android:padding="5dp"
                android:inputType="textCapSentences"
                android:textSize="@dimen/textSizeTwo"
                android:textStyle="bold"
                android:background="@drawable/edittext_background" />


            <EditText
                android:id="@+id/dEntryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:gravity="start|top"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="10"
                android:textSize="@dimen/textSizeOneFive"
                android:background="@drawable/edittext_background" />

            <TextView
                android:id="@+id/dEntryReferenceNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dEntryText"
                android:text="ERN: "
                android:textSize="@dimen/textSizeTwo"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/dTagsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags: "
                android:textSize="@dimen/textSizeTwo"
                android:layout_marginLeft="10dp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/dCollapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false"
            android:background="@color/colorPrimary">


            <FrameLayout
                android:id="@+id/dAudioVideoRecordFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dEntryImagesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </FrameLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right">

                    <TextView
                        android:id="@+id/dCancleButtonAB"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Cancle"
                        android:textColor="@color/primaryTextColor"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/textSizeTwo"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/dPhotosButtonAB"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/photo_record"
                        android:tint="@color/primaryTextColor"
                        android:padding="2dp"
                        android:gravity="center" />


                    <ImageView
                        android:id="@+id/dAudioButtonAB"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/record_audio"
                        android:tint="@color/primaryTextColor"
                        android:padding="2dp"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/dVideoButtonAB"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/video_record"
                        android:tint="@color/primaryTextColor"
                        android:padding="2dp"
                        android:gravity="center" />


                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
