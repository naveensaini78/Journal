<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:defaultValue="0"
        app:entries="@array/videoBackQualityHeads"
        app:entryValues="@array/videoBackQualityValues"
        app:key="videoBackQuality"
        app:title="Video Quality - Back Camera"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="4"
        app:entries="@array/videoFrontQualityHeads"
        app:entryValues="@array/videoFrontQualityValues"
        app:key="videoFrontQuality"
        app:title="Video Quality - Front Camera"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>
